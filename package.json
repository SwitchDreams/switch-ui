{
  "name": "@switchdreams/ui",
  "private": false,
  "version": "0.4.0",
  "type": "module",
  "description": "Biblioteca de Componentes da SwitchDreams",
  "repository": {
    "type": "git",
    "url": "https://github.com/SwitchDreams/switch-ui.git"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/ui.es.js",
      "require": "./dist/ui.umd.js"
    },
    "./dist/style.css": "./dist/style.css",
    "./dist/tailwind.plugin.ts": "./dist/tailwind.plugin.ts"
  },
